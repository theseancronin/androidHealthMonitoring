<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/entry_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/day_container"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/entry_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="12"
                        android:textSize="30sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/day_container"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/entry_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="December"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        />


                    <TextView
                        android:id="@+id/entry_weekday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Friday"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:id="@+id/entry_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="14dp"
                        android:text="14:35"/>
                </LinearLayout>



        </RelativeLayout>


        <TextView
            android:id="@+id/speech_txt_portion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:layout_marginStart="8dp"

            android:layout_gravity="top"
            android:text="I have a headache"/>



    </LinearLayout>

</android.support.v7.widget.CardView>