<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/displayBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/border_bottom_2">

            <TextView
                android:id="@+id/editNameText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pharmacy_name"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:padding="8dp">

            <EditText
                android:id="@+id/pharmacy_name"
                android:hint="@string/pharmacy_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                />

        </RelativeLayout>

        <!-- PATIENT NUMBER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/border_bottom_2">

            <TextView
                android:id="@+id/pharmacy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneNumber"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <EditText
                android:id="@+id/pharmacy_tel"
                android:hint="@string/phoneNumber"
                android:inputType="number"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#ffffff"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="8dp">

            <Button
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/windowBackground"
                android:background="@color/colorPrimary"/>

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/save_btn"
                android:text="@string/cancel"
                android:textColor="@color/windowBackground"
                android:background="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

        </RelativeLayout>

    </LinearLayout>



</ScrollView>
