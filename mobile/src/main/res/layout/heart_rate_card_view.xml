<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/bpm_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/heart_rate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_pulse"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingEnd="5dp"
                android:paddingStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/heart_icon"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


            <TextView
                android:id="@+id/heart_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_dpm"
                android:layout_centerInParent="true"

                android:textSize="44sp"
                />

            <TextView
                android:id="@+id/bpm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bpm"
                android:layout_toEndOf="@+id/heart_rate_value"
                android:layout_centerVertical="true"

                android:paddingEnd="8dp"
                android:paddingStart="5dp"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/type_heart_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resting"

                    android:layout_gravity="center_horizontal"

                    android:textSize="20sp"/>
            </LinearLayout>

        </RelativeLayout>






    </RelativeLayout>

</android.support.v7.widget.CardView>