<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/bpm_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/heart_rate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_pulse"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingEnd="5dp"
                android:paddingStart="8dp"/>

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/heart_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/heart_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_dpm"
                android:layout_centerInParent="true"

                android:textSize="44sp"
                />

            <TextView
                android:id="@+id/bpm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bpm"
                android:layout_toEndOf="@+id/heart_rate_value"
                android:layout_centerVertical="true"

                android:paddingEnd="8dp"
                android:paddingStart="5dp"
                android:textSize="14sp"
                />
        </RelativeLayout>






    </RelativeLayout>

</android.support.v7.widget.CardView>