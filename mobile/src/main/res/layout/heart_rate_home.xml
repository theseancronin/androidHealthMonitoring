                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>


                    <RelativeLayout
